          {
            "name": "getTokenMentions",
            "description": "Track all mentions of a token symbol or contract address"
          },
          {
            "name": "getInfluencerActivity",
            "description": "Monitor specific crypto influencer accounts"
          },
          {
            "name": "analyzeSentiment",
            "description": "AI-powered sentiment analysis on tweet text"
          },
          {
            "name": "detectBots",
            "description": "Identify bot accounts and artificial engagement"
          },
          {
            "name": "getTrendingHashtags",
            "description": "Get trending crypto hashtags and topics"
          },
          {
            "name": "getEngagementMetrics",
            "description": "Calculate likes, retweets, replies, impressions"
          },
          {
            "name": "trackCalls",
            "description": "Monitor token 'calls' from known callers"
          },
          {
            "name": "streamMentions",
