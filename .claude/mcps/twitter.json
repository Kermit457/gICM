        "pricing": {
          "free_tier": "1,500 tweets/month (Basic tier)",
          "paid_tier": "$100/month for 10,000 tweets/month (Pro tier)",
          "enterprise": "$42,000/month for unlimited (Enterprise tier)",
          "note": "Free tier has limited filtering and no streaming"
        },
        "setup": {
          "steps": [
            "Create Twitter Developer account at https://developer.twitter.com",
            "Create new project and app",
            "Generate API Key, API Secret, and Bearer Token",
            "Add all 3 tokens to .env file",
            "Ensure app has OAuth 2.0 enabled",
            "Run: gicm add mcp/twitter"
          ]
        },
        "features": [
          "Keyword and hashtag monitoring",
          "Influencer tracking",
          "Sentiment analysis",
          "Bot detection",
          "Engagement metrics",
          "Real-time streaming",
          "Historical search (7 days free, 30+ days paid)",
          "User profile analysis"
        ],
        "rateLimit": {
          "free": "1,500 tweets/month",
          "pro": "10,000 tweets/month",
          "enterprise": "Unlimited"
        },
        "useCases": [
          "Track token launch announcements",
          "Monitor influencer calls",
          "Detect coordinated pump campaigns",
          "Identify FUD campaigns",
          "Track community sentiment shifts",
          "Find early alpha on new launches"
        ]
      }
