{
  "name": "@gicm/memory",
  "version": "1.0.0",
  "description": "AI Memory - Persistent context storage across sessions for the gICM platform",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
