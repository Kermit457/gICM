{
  "name": "opus67",
  "displayName": "OPUS 67",
  "description": "AI superpowers for VS Code - 95 Skills, 84 MCPs, 30 Modes, 82 Agents",
  "version": "1.0.0",
  "publisher": "icm-motion",
  "repository": {
    "type": "git",
    "url": "https://github.com/gicm-dev/gicm"
  },
  "homepage": "https://opus67.dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "claude",
    "opus67",
    "skills",
    "agents",
    "mcp",
    "solana",
    "web3"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opus67.showStatus",
        "title": "OPUS 67: Show Status"
      },
      {
        "command": "opus67.browseSkills",
        "title": "OPUS 67: Browse Skills"
      },
      {
        "command": "opus67.browseAgents",
        "title": "OPUS 67: Browse Agents"
      },
      {
        "command": "opus67.selectMode",
        "title": "OPUS 67: Select Mode"
      },
      {
        "command": "opus67.install",
        "title": "OPUS 67: Install in Project"
      },
      {
        "command": "opus67.openDocs",
        "title": "OPUS 67: Open Documentation"
      }
    ],
    "configuration": {
      "title": "OPUS 67",
      "properties": {
        "opus67.defaultMode": {
          "type": "string",
          "default": "AUTO",
          "enum": ["AUTO", "BUILD", "REVIEW", "ARCHITECT", "DEBUG", "SOLANA", "GRAB", "VIBE"],
          "description": "Default operating mode for OPUS 67"
        },
        "opus67.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show OPUS 67 status bar item"
        },
        "opus67.autoDetectSkills": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect relevant skills based on file type"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run compile -- --watch",
    "package": "npm run compile -- --minify",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "typescript": "^5.4.0"
  }
}
