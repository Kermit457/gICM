{
  "name": "@gicm/workflow-engine",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.js",
      "require": "./dist/templates/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/templates/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts src/templates/index.ts --format esm --dts --watch"
  },
  "dependencies": {
    "@gicm/agent-core": "workspace:*",
    "eventemitter3": "^5.0.0",
    "zod": "^3.23.0",
    "uuid": "^9.0.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "tsup": "^8.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0"
  }
}
