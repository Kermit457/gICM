{
  "name": "@gicm/skill-devops-toolkit",
  "version": "1.0.0",
  "description": "DevOps utilities for OPUS 67 skills - CI/CD, Docker, Kubernetes helpers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
