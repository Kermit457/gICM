{
  "name": "@gicm/activity-logger",
  "version": "0.1.0",
  "description": "On-chain activity logging for gICM Orchestrator (SQLite + Solana + Arweave)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js"
    },
    "./solana": {
      "types": "./dist/solana/index.d.ts",
      "import": "./dist/solana/index.js"
    },
    "./arweave": {
      "types": "./dist/arweave/index.d.ts",
      "import": "./dist/arweave/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@irys/sdk": "^0.2.0",
    "@solana/spl-memo": "^0.2.5",
    "@solana/web3.js": "^1.95.0",
    "better-sqlite3": "^11.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.17.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "files": ["dist", "README.md"],
  "keywords": [
    "gicm",
    "activity-logger",
    "solana",
    "arweave",
    "on-chain",
    "transparency"
  ],
  "author": "Mirko Basil DÃ¶lger <mirko@gicm.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gicm-dev/gicm.git",
    "directory": "packages/activity-logger"
  },
  "homepage": "https://github.com/gicm-dev/gicm/tree/main/packages/activity-logger#readme",
  "bugs": { "url": "https://github.com/gicm-dev/gicm/issues" },
  "publishConfig": { "access": "public" }
}
